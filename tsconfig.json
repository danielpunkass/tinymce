{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "noUnusedLocals": true,
    "module": "es2015",
    "importHelpers": true,
    "lib": ["es2015"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "tinymce": ["src/core/main/ts/api/Main"],
      "tinymce/core/*": ["src/core/main/ts/*"],
      "tinymce/ui/*": ["src/ui/main/ts/*"],
      "tinymce/themes/modern/*": ["src/themes/modern/main/ts/*"],
      "tinymce/plugins/paste/*": ["src/plugins/paste/main/ts/*"],
      "tinymce/plugins/redsweater/*": ["src/plugins/redsweater/main/ts/*"],
    }
  },
  "include": [
    "src/core/main/ts",
    "src/core/demo/ts",
    "src/ui/main/ts",
    "src/plugins/paste/main/ts",
    "src/plugins/redsweater/main/ts",
    "src/themes/modern/main/ts",
    "src/core/dist/globals/tinymce/core/",
    "src/core/dist/globals/**/*.ts",
    "node_modules/@ephox/**/*/api/Main.d.ts"
  ]
}
